{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@state/*": ["./src/state/*"],
        "habit-fract-design-system": ["../design-system/dist"],
        "habit-fract-design-system/*": ["../design-system/dist/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true,
    "composite": true,
  },
  "include": ["./src", "../ui/src/graphql/generated/**/*"],
  "references": [{ "path": "../design-system" }],
  "exclude": [
    "node_modules",
    "**/node_modules/**/*",
    "../node_modules/**/*",
    "../design-system/dist",
    "./src/graphql/generated/*",
    "./dist/**/*"
  ]
}
