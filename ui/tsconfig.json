{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declarationDir": "./types",
    "paths": {
      "@state/*": ["./src/state/*"],
    },
  },
  "include": [
    "./src", 
    "../ui/src/graphql/generated/**/*"
  ],
  "references": [
    { "path": "../design-system" }
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**/*",
    "../node_modules/**/*",
    "../design-system/dist",
    "./src/graphql/generated/*",
    "./dist/**/*"
  ]
}
