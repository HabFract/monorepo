{
  "references": [{ "path": "../tsconfig.json" }],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
    
  },
  "include": ["src/**/*", "../design-system/**/*"],
  "exclude": [
    "../node_modules",
    "node_modules",
    "src/graphql/generated/**/*",
    "dist"
  ]
}
