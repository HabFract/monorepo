{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "declarationDir": "dist/"
  },
  "include": ["src/**/*", "dist"],
  "exclude": [
    "node_modules",
    "**/node_modules/**/*",
    "../node_modules/**/*",
    "../design-system/dist",
    "./src/graphql/generated/*"
  ]
}
